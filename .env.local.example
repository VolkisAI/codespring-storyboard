# Example .env.local file - Copy to .env.local and fill in your values

# Clerk Auth (required)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_XXXXXXXXXXXXXXXXXXXX
CLERK_SECRET_KEY=sk_test_XXXXXXXXXXXXXXXXXXXX
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/login
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/notes
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/notes

# Supabase (required)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/notes_app

# Payment provider selection
# Options: "stripe" or "whop"
ACTIVE_PAYMENT_PROVIDER=whop

# Stripe Configuration (required if ACTIVE_PAYMENT_PROVIDER=stripe)
STRIPE_API_KEY=sk_test_XXXXXXXXXXXXXXXXXXXX
STRIPE_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXXXXXXX
NEXT_PUBLIC_STRIPE_PAYMENT_LINK_MONTHLY=https://buy.stripe.com/XXXXXXXXXXX
NEXT_PUBLIC_STRIPE_PAYMENT_LINK_YEARLY=https://buy.stripe.com/XXXXXXXXXXX

# Whop Configuration (required if ACTIVE_PAYMENT_PROVIDER=whop)
WHOP_API_KEY=sk_live_XXXXXXXXXXXXXXXXXXXX
NEXT_PUBLIC_WHOP_PAYMENT_LINK_MONTHLY=https://whop.com/checkout/plan_XXXXXX
NEXT_PUBLIC_WHOP_PAYMENT_LINK_YEARLY=https://whop.com/checkout/plan_XXXXXX
NEXT_PUBLIC_WHOP_REDIRECT_URL=https://your-app.com/notes

# These are the plan IDs for creating Whop checkouts with proper metadata
WHOP_PLAN_ID_MONTHLY=plan_XXXXXX
WHOP_PLAN_ID_YEARLY=plan_XXXXXX 